<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_sessionId"
        android:layout_width="80sp"
		android:layout_height="45sp"
		android:gravity="right|center_vertical"
        android:paddingLeft="35sp"
        android:paddingRight="15dp"
        android:hint="sessionId"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_sessionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_sessionId"
        android:layout_alignBaseline="@+id/textView_sessionId"
        android:hint="sessionName"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView_sessionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView_sessionName"
        android:layout_alignBaseline="@+id/textView_sessionId"
        android:hint="sessionType"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView_sessionTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/textView_sessionId"
        android:gravity="right"
        android:layout_marginRight="24dp"
        android:hint="Team"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>